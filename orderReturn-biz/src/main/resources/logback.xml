<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">
	<property resource="spring/placeholder.properties" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <Encoding>UTF-8</Encoding>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}  %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${catalina.base}/logs/orderReturn-apache.log</file>
        <Encoding>UTF-8</Encoding>
        <encoder>
            <pattern>%date %level   %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="ROLLFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/orderReturn.log</file>
        <Encoding>UTF-8</Encoding>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${catalina.base}/logs/orderReturn.%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} %level  %logger{10} [%file:%line] %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="ORDERRETURNLOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${catalina.base}/logs/orderReturnlog.log</file>
        <Encoding>UTF-8</Encoding>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>
                ${catalina.base}/logs/orderReturnlog.%d{yyyy-MM-dd}.log
            </FileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}  %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="orderReturnlog" additivity="false">
        <appender-ref ref="ORDERRETURNLOG" />
    </logger>
    <logger name="org.springframework" level="INFO" additivity="false">
        <appender-ref ref="FILE" />
    </logger>
	<logger name="com.ibatis.common.jdbc.SimpleDataSource" level="${log.level}" />  
	<logger name="com.ibatis.common.jdbc.ScriptRunner" level="${log.level}" />  
	<logger name="com.ibatis.sqlmap.engine.impl.SqlMapClientDelegate" level="${log.level}" />  
	<logger name="java.sql.Connection" level="${log.level}" />  
	<logger name="java.sql.Statement" level="${log.level}" />  
	<logger name="java.sql.PreparedStatement" level="${log.level}" />
	
    <root level="${log.level}">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="ROLLFILE" />
    </root>
</configuration>